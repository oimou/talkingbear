doctype html
html(ng-app='app')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width')
    title Talking Bear
    link(rel='stylesheet', href='lib/foundation/css/normalize.css')
    link(rel='stylesheet', href='lib/foundation/css/foundation.min.css')
    link(rel='stylesheet', href='lib/angular/angular-csp.css')
    link(rel='stylesheet', href='css/main.css')
    script(src='lib/angular/angular.min.js')
    script(src='js/main.js')
    script(src='controller/SpeechCtrl.js')

  body(ng-controller='SpeechCtrl')
    .row
      .small-12.columns
        .main-view
          h1 Talking Bear
          form
            input(type='text', ng-model='phrase', autofocus)
            button.button.expand(ng-click='say()') say
